    </set>
    <set android:duration="50" android:startOffset="100"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <scale android:interpolator="@android:anim/accelerate_interpolator" android:pivotX="50.0%" android:pivotY="50.0%" android:fromXScale="1.02" android:toXScale="1.0" android:fromYScale="1.02" android:toYScale="1.0" />
    </set>
</set>