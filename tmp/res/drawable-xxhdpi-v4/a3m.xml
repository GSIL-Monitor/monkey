<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20.0dip" />
            <solid android:color="#ffededed" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="20.0dip" />
                <gradient android:startColor="#ffff003b" android:endColor="#ffff6600" android:angle="180.0" />
            </shape>
        </scale>
        <scale android:drawable="@drawable/pj" android:scaleWidth="100%" />
    </item>
</layer-list>