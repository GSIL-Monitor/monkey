<?xml version="1.0" encoding="utf-8"?>
<transition android:exitFadeDuration="@android:integer/config_shortAnimTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="16.0dip" />
            <solid android:color="@color/gp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners android:radius="16.0dip" />
            <gradient android:startColor="@color/gb" android:endColor="@color/fc" android:angle="225.0" />
        </shape>
    </item>
</transition>